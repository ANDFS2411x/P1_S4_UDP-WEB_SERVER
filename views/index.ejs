<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="titulo">Proyecto 2 <%= title %></title>
    <style>
        /* ðŸ”¹ Estilos Generales */
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        /* ðŸ”¹ Navbar */
        .navbar {
            display: flex;
            justify-content: center;
            background-color: #333;
            padding: 15px 0;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            padding: 15px 20px;
            font-size: 18px;
            transition: 0.3s;
        }

        .navbar a:hover, .navbar a.active {
            background-color: #4CAF50;
            border-radius: 5px;
        }

        /* ðŸ”¹ Secciones */
        .section {
            display: none;
            padding: 20px;
        }

        .section.active {
            display: block;
            animation: fadeIn 0.5s ease-in-out;
        }

        /* ðŸ”¹ AnimaciÃ³n */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* ðŸ”¹ Mapa */
        #map {
            height: 70vh;
            width: 100%;
            border: 1px solid #ccc;
        }

        /* ðŸ”¹ Panel de informaciÃ³n */
        .info-panel {
            background: white;
            padding: 15px;
            margin: 15px auto;
            max-width: 600px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

        .info-panel p {
            margin: 5px 0;
            text-align: left;
        }

        /* ðŸ”¹ BotÃ³n seguir */
        #seguirBtn {
            margin: 15px auto;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
            display: block;
        }

        #seguirBtn:hover {
            background-color: #45a049;
        }

        /* ðŸ”¹ Formulario HistÃ³rico */
        .filter-form {
            background: white;
            padding: 15px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            display: inline-block;
            margin-bottom: 15px;
        }

        .filter-form label, .filter-form input {
            display: block;
            margin: 5px 0;
            font-size: 16px;
        }

        .filter-form button {
            margin-top: 10px;
            padding: 8px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
        }

        .filter-form button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

    <!-- ðŸ”¹ Navbar -->
    <div class="navbar">
        <a href="#" id="realTimeBtn" class="active">Real Time</a>
        <a href="#" id="historicalBtn">Historical</a>
    </div>

    <!-- ðŸ”¹ SecciÃ³n "Real Time" -->
    <div id="realTime" class="section active">
        <h1>Real Time Tracking ðŸš•</h1>
        
        <!-- Panel de informaciÃ³n -->
        <div class="info-panel">
            <p><strong>Latitud:</strong> <span id="latitud">N/A</span></p>
            <p><strong>Longitud:</strong> <span id="longitud">N/A</span></p>
            <p><strong>Fecha:</strong> <span id="fecha">N/A</span></p>
            <p><strong>Hora:</strong> <span id="tiempo">N/A</span></p>
        </div>
        
        <button id="seguirBtn">Seguir Taxi</button>
        <div id="map">Cargando mapa en tiempo real...</div>
    </div>

    <!-- ðŸ”¹ SecciÃ³n "Historical" -->
    <div id="historical" class="section">
        <h1>Historical Tracking ðŸ“…</h1>
        <div class="filter-form">
            <label for="startDate">Fecha y hora inicial:</label>
            <input type="datetime-local" id="startDate">

            <label for="endDate">Fecha y hora final:</label>
            <input type="datetime-local" id="endDate">

            <button id="loadHistory">Cargar Trayectoria</button>
        </div>
        <div id="map">Cargando mapa histÃ³rico...</div>
    </div>

    <script>
        let map;
        let marker;
        let seguirCentrando = false;
        let recorrido = [];
        let polyline;
        let updateInterval;
    
        // ðŸ”¹ Detectamos si estamos en testeo o producciÃ³n
        const basePath = window.location.pathname.includes("/test") ? "/test" : "";
    
        function obtenerDatosIniciales() {
            return fetch(`${basePath}/data`)
                .then(res => {
                    if (!res.ok) throw new Error("Error en la respuesta del servidor");
                    return res.json();
                })
                .catch(err => {
                    console.error("âŒ Error obteniendo datos iniciales:", err);
                    return null;
                });
        }
    
            async function cargarMapa() {
        try {
            // 1. Obtener API Key
            const apiKeyResponse = await fetch(`${basePath}/api-key`);
            if (!apiKeyResponse.ok) {
                throw new Error('Error al obtener API key');
            }
            const apiKeyData = await apiKeyResponse.json();
            
            if (!apiKeyData.apiKey) {
                throw new Error('No se recibiÃ³ la API key');
            }

            // 2. Obtener posiciÃ³n inicial
            const dataResponse = await fetch(`${basePath}/data`);
            if (!dataResponse.ok) {
                throw new Error('Error al obtener datos iniciales');
            }
            const ubicacion = await dataResponse.json();

            if (!ubicacion?.LATITUDE || !ubicacion?.LONGITUDE) {
                throw new Error('Datos de ubicaciÃ³n incompletos');
            }

            // 3. Configurar posiciÃ³n inicial
            window.posicionInicial = {
                lat: parseFloat(ubicacion.LATITUDE),
                lng: parseFloat(ubicacion.LONGITUDE)
            };
            recorrido = [window.posicionInicial];

            // 4. Cargar Google Maps
            const script = document.createElement('script');
            script.src = `https://maps.googleapis.com/maps/api/js?key=${apiKeyData.apiKey}&callback=initMap`;
            script.async = true;
            document.head.appendChild(script);
        } catch (error) {
            console.error('Error al cargar el mapa:', error);
            document.getElementById("map").innerText = `Error: ${error.message}`;
        }
    }
    
        function initMap() {
            console.log("Inicializando mapa...");
            
            map = new google.maps.Map(document.getElementById("map"), {
                center: window.posicionInicial,
                zoom: 15
            });
    
            marker = new google.maps.Marker({
                position: window.posicionInicial,
                map: map,
                title: "Taxi ðŸš•",
                icon: {
                    url: "https://cdn-icons-png.flaticon.com/128/2401/2401174.png",
                    scaledSize: new google.maps.Size(50, 50)
                }
            });
    
            polyline = new google.maps.Polyline({
                path: recorrido,
                geodesic: true,
                strokeColor: "#FF0000",
                strokeOpacity: 1.0,
                strokeWeight: 4,
                map: map
            });
    
            document.getElementById("seguirBtn").addEventListener("click", () => {
                seguirCentrando = true;
                centrarEnTaxi();
            });
    
            map.addListener('dragstart', () => {
                seguirCentrando = false;
            });
    
            // Iniciar actualizaciÃ³n periÃ³dica
            actualizarDatos();
            updateInterval = setInterval(actualizarDatos, 5000);
        }
    
            async function actualizarDatos() {
        try {
            const response = await fetch(`${basePath}/data`);
            if (!response.ok) {
                throw new Error('Error en la respuesta del servidor');
            }
            const data = await response.json();

            // Actualizar panel de informaciÃ³n
            document.getElementById("longitud").textContent = data.LONGITUDE || "N/A";
            document.getElementById("latitud").textContent = data.LATITUDE || "N/A";
            document.getElementById("fecha").textContent = data.DATE || "N/A";
            document.getElementById("tiempo").textContent = data.TIME || "N/A";

            if (data.LATITUDE && data.LONGITUDE) {
                const nuevaPosicion = {
                    lat: parseFloat(data.LATITUDE),
                    lng: parseFloat(data.LONGITUDE)
                };

                if (marker) marker.setPosition(nuevaPosicion);
                recorrido.push(nuevaPosicion);
                if (polyline) polyline.setPath(recorrido);

                if (seguirCentrando && map) {
                    map.setCenter(nuevaPosicion);
                }
            }
        } catch (error) {
            console.error('Error actualizando datos:', error);
        }
    }

        function actualizarPanelInformacion(data) {
            document.getElementById("longitud").textContent = data.LONGITUDE || "N/A";
            document.getElementById("latitud").textContent = data.LATITUDE || "N/A";
            document.getElementById("fecha").textContent = data.DATE || "N/A";
            document.getElementById("tiempo").textContent = data.TIME || "N/A";
        }
    
        function centrarEnTaxi() {
            if (marker && map) {
                map.setCenter(marker.getPosition());
            }
        }
    
        // ðŸ”¹ Manejo de la navegaciÃ³n entre "Real Time" e "Historical"
        document.getElementById("realTimeBtn").addEventListener("click", function() {
            document.getElementById("realTime").classList.add("active");
            document.getElementById("historical").classList.remove("active");
            this.classList.add("active");
            document.getElementById("historicalBtn").classList.remove("active");
    
            // Reiniciar la actualizaciÃ³n si se habÃ­a detenido
            if (!updateInterval) {
                actualizarDatos();
                updateInterval = setInterval(actualizarDatos, 5000);
            }
        });
    
        document.getElementById("historicalBtn").addEventListener("click", function() {
            document.getElementById("historical").classList.add("active");
            document.getElementById("realTime").classList.remove("active");
            this.classList.add("active");
            document.getElementById("realTimeBtn").classList.remove("active");
    
            // Detener la actualizaciÃ³n automÃ¡tica
            if (updateInterval) {
                clearInterval(updateInterval);
                updateInterval = null;
            }
        });
    
        // ðŸ”¹ Cargar el mapa al iniciar
        cargarMapa();
    </script>
</body>
</html>