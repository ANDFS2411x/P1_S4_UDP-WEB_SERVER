<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="titulo">SnapMap ~ <%= title %></title>
    <link rel="stylesheet" id="themeStyles">
    <link rel="icon" type="image/x-icon" id="icono"/>
    <!-- Precargar recursos -->
    <link rel="preconnect" href="https://maps.googleapis.com">
    <link rel="preconnect" href="https://maps.gstatic.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>

<body>
    <!-- Header con navegación -->
    <header class="main-header">
        <div id="brand">
            <a id="btn-logo" aria-label="Home">
                <img alt="SnapMap Logo" class="logo" id="logo">
            </a>
            <h1 class="project-title">SnapMap</h1>
        </div>
        
        <nav id="navbar">
            <a href="#" id="realTimeBtn" class="active" aria-current="page">Real Time</a>
            <a href="#" id="historicalBtn">Historical</a>
        </nav>

        <div id="about-div">
            <a id="about" aria-label="About Us">About us</a>
        </div>
    </header>

    <main>
        <!-- Sección Real Time -->
        <section id="realTime" class="section active" aria-labelledby="realTimeBtn">        
            <div id="realTimeMapContainer" class="mapContainer">
                <div id="realTimeMap" class="map" aria-label="Real Time Map">Loading map...</div>
                <div id="realTimeLoadingMessage" class="loadingMessage" style="display: none;" role="status">
                    <span>Loading data...</span>
                </div>
            </div>
            
            <div class="info-panel" role="region" aria-label="Location Information">
                <p><strong>Latitude:</strong> <span id="latitud">N/A</span></p>
                <p><strong>Longitude:</strong> <span id="longitud">N/A</span></p>
                <p><strong>Date:</strong> <span id="fecha">N/A</span></p>
                <p><strong>Time:</strong> <span id="tiempo">N/A</span></p>
            </div>

            <button id="seguirBtn" class="action-button" aria-label="Follow Taxi">Follow Taxi</button>
            <div id="realTimeError" class="error-message" role="alert"></div>
        </section>

        <!-- Sección Historical -->
        <section id="historical" class="section" aria-labelledby="historicalBtn">        
            <div id="historicalMapContainer" class="mapContainer">
                <div id="historicalMap" class="map" aria-label="Historical Map">Select a date range and click "Load Trajectory"</div>
                <div id="historicalLoadingMessage" class="loadingMessage" style="display: none;" role="status">
                    <span>Loading historical data...</span>
                </div>
            </div>

            <div id="timelineControls" class="timeline-controls" style="display: none;" role="region" aria-label="Timeline Controls">
                <input type="range" id="timelineSlider" min="0" max="100" value="0" class="timeline-slider" aria-label="Timeline Slider">
                <div class="timeline-info">
                    <span id="currentTimeInfo">--:--:--</span>
                    <span id="distanceInfo">Distance to point: -- m</span>
                </div>
            </div>

            <form class="filter-form" role="search">
                <div class="form-group">
                    <label for="startDate">Start Date and Time:</label>
                    <input type="datetime-local" id="startDate" required>
                </div>

                <div class="form-group">
                    <label for="endDate">End Date and Time:</label>
                    <input type="datetime-local" id="endDate" required>
                </div>

                <div id="pointSelectionContainer" class="point-selection-container">
                    <div class="checkbox-container">
                        <input type="checkbox" id="enablePointSelection">
                        <label for="enablePointSelection">Select point on map</label>
                        <span class="helper-text">(Click on the map to select a point)</span>
                    </div>
                    
                    <div class="coordinates-container">
                        <div class="coord-group">
                            <label for="selectedLat">Latitude:</label>
                            <input type="text" id="selectedLat" disabled>
                        </div>
                        <div class="coord-group">
                            <label for="selectedLng">Longitude:</label>
                            <input type="text" id="selectedLng" disabled>
                        </div>
                    </div>
                    
                    <div class="radius-container">
                        <label for="searchRadius">Search Radius (meters):</label>
                        <input type="number" id="searchRadius" min="10" max="1000" value="50">
                    </div>
                    
                    <button type="button" id="clearPointBtn" class="secondary-button" disabled>Clear Point</button>
                </div>

                <button type="button" id="loadHistory" class="action-button">Load Trajectory</button>
            </form>

            <div id="historicalError" class="error-message" role="alert"></div>
        </section>
    </main>
    
    <!-- Scripts -->
    <script>
        const isTesting = window.location.pathname.startsWith('/test');
        document.getElementById('themeStyles').href = isTesting
            ? '/test/styles/main.css'
            : '/styles/main.css';

        document.getElementById('btn-logo').href = isTesting
            ? '/test/'
            : '/';
            
        const logo = document.getElementById('logo');
        logo.src = isTesting
            ? '/test/images/logo.png'
            : '/images/logo.png';

        const icono = document.getElementById('icono');
        icono.href = isTesting
            ? '/test/images/favicon.ico'
            : '/images/favicon.ico';        

        document.getElementById('about').href = isTesting
            ? '/test/aboutUs'
            : '/aboutUs';
    </script>
    <script src="js/timeline-animation.js"></script>
    <script defer src="js/main.js"></script>
</body>
</html>