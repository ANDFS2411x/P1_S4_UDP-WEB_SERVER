<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="titulo">Proyecto 2 <%= title %></title>
    <link rel="stylesheet" id="themeStyles">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- ðŸ”¹ Navbar -->
    <div class="navbar">
        <a href="#" id="realTimeBtn" class="active">Real Time</a>
        <a href="#" id="historicalBtn">Historical</a>
    </div>

    <!-- SecciÃ³n Real Time -->
<div id="realTimeSection" class="section active">
    <div class="section-content">
        <div class="map-area">
            <div class="mapContainer">
                <div id="realTimeMap" class="map"></div>
            </div>
        </div>
        <div class="sidebar">
            <h2 class="section-title">Real Time Tracking ðŸš•</h2>
            <div class="info-panel">
                <div class="info-pair">
                    <span class="info-label">Latitud:</span>
                    <span class="info-value" id="rtLatitud">10.430194</span>
                </div>
                <div class="info-pair">
                    <span class="info-label">Longitud:</span>
                    <span class="info-value" id="rtLongitud">-75.547287</span>
                </div>
                <div class="info-pair">
                    <span class="info-label">Fecha:</span>
                    <span class="info-value" id="rtFecha">2025-04-02T00:00:00.000Z</span>
                </div>
                <div class="info-pair">
                    <span class="info-label">Hora:</span>
                    <span class="info-value" id="rtHora">08:29:40</span>
                </div>
            </div>
            <button class="action-button" id="seguirTaxi">Seguir Taxi</button>
        </div>
    </div>
</div>

<!-- SecciÃ³n Historical -->
<div id="historicalSection" class="section">
    <div class="section-content">
        <div class="map-area">
            <div class="mapContainer">
                <div id="historicalMap" class="map"></div>
            </div>
        </div>
        <div class="sidebar">
            <h2 class="section-title">Historical Tracking ðŸ“…</h2>
            <form class="filter-form" id="historicalForm">
                <div class="form-group">
                    <label for="fechaInicio">Fecha y hora inicial:</label>
                    <input type="datetime-local" id="fechaInicio" required>
                </div>
                <div class="form-group">
                    <label for="fechaFin">Fecha y hora final:</label>
                    <input type="datetime-local" id="fechaFin" required>
                </div>
                <div class="point-selection-container">
                    <div class="checkbox-container">
                        <input type="checkbox" id="selectPoint">
                        <label for="selectPoint">Seleccionar punto en el mapa</label>
                        <span class="helper-text">(Haz clic en el mapa para seleccionar un punto)</span>
                    </div>
                    <div class="coordinates-container">
                        <div class="coord-group">
                            <label for="latitud">Latitud:</label>
                            <input type="text" id="latitud" readonly>
                        </div>
                        <div class="coord-group">
                            <label for="longitud">Longitud:</label>
                            <input type="text" id="longitud" readonly>
                        </div>
                    </div>
                    <div class="radius-container">
                        <label for="radio">Radio de bÃºsqueda (metros):</label>
                        <input type="number" id="radio" value="50" min="10" max="1000">
                    </div>
                    <button type="button" class="secondary-button" id="borrarPunto">Borrar punto</button>
                </div>
                <button type="submit" class="action-button" id="cargarTrayectoria">Cargar Trayectoria</button>
            </form>
        </div>
    </div>
</div>
    
    <!-- Scripts loading -->
    <script>
        const isTesting = window.location.pathname.startsWith('/test');
        document.getElementById('themeStyles').href = isTesting
            ? '/test/styles/main.css'
            : '/styles/main.css';
        // Create a new script element
        const script = document.createElement('script');
        script.src = isTesting ? '/test/js/main.js' : '/js/main.js';
        document.body.appendChild(script);
    </script>
</body>
</html>